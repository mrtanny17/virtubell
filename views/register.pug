doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/style.css")
    link(rel="stylesheet", href="css/styleReg.css")
    title Register
  body
    nav.navbar
      div.logo
        span
          a(href="/") VirtuBell
      ul.nav-list
        li
          a(href="/") Home
        li
          a(href="#") About
        li
          a(href="/contact") Contact
        li
          a(href="/login") Login/Register
    .form-container
      form.form(action="/register", method="POST")
        p.title Sign up!
        p.message Signup now and get full access to our services.
        if duplicateEmail
          p.error Email already exists. Please use a different email.
        .flex
          label
            input.input(type="text", name="firstname", placeholder="First Name", required)
          label
            input.input(type="text", name="lastname", placeholder="Last Name", required)
        label
          input.input(type="email", name="email", placeholder="Email", required)
        label
          input.input(type="password", name="password", placeholder="Password", required)
        label
          input.input(type="password", name="confirmpassword", placeholder="Confirm Password", required)
        button.submit(type="submit") Submit


        // Display success message on successful registration
        if (successMessage)
          p.successMessage= successMessage

        if (passwordsDontmatch)
          p.passwordsDontmatch= passwordsDontmatch

          
        p.signin Already have an account? 
          a(href="/login") Login!
